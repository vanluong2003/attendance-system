{
  "openapi": "3.0.1",
  "info": {
    "title": "API for Adminstrator",
    "description": "API for AttendanceSys core domain",
    "version": "v1"
  },
  "paths": {
    "/api/admin/class/{id}": {
      "get": {
        "tags": [
          "Class"
        ],
        "operationId": "GetClassById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ClassDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClassDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClassDto"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Class"
        ],
        "operationId": "UpdateClass",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/admin/class/paging": {
      "get": {
        "tags": [
          "Class"
        ],
        "operationId": "GetAllPaging",
        "parameters": [
          {
            "name": "courseName",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "coureCode",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "pageIndex",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ClassInListDtoPageResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClassInListDtoPageResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClassInListDtoPageResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/class": {
      "post": {
        "tags": [
          "Class"
        ],
        "operationId": "CreateClass",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUpdateClassRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Class"
        ],
        "operationId": "DeleteClasses",
        "parameters": [
          {
            "name": "ids",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uuid"
              },
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/admin/class/entry/{uid}": {
      "get": {
        "tags": [
          "Class"
        ],
        "operationId": "GetAttendance",
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "location",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Enrollment"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Enrollment"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Enrollment"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClassDto": {
        "required": [
          "courseCode",
          "courseName",
          "lecturerID"
        ],
        "type": "object",
        "properties": {
          "courseName": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "courseCode": {
            "maxLength": 50,
            "type": "string",
            "nullable": true
          },
          "lecturerID": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ClassInListDto": {
        "required": [
          "courseCode",
          "courseName",
          "lecturerID"
        ],
        "type": "object",
        "properties": {
          "courseName": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "courseCode": {
            "maxLength": 50,
            "type": "string",
            "nullable": true
          },
          "lecturerID": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ClassInListDtoPageResult": {
        "type": "object",
        "properties": {
          "currentPage": {
            "type": "integer",
            "format": "int32"
          },
          "pageCount": {
            "type": "integer",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
            "format": "int32"
          },
          "rowCount": {
            "type": "integer",
            "format": "int32"
          },
          "firstRowOnPage": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "lastRowOnPAge": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "additionalData": {
            "type": "string",
            "nullable": true
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ClassInListDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateUpdateClassRequest": {
        "required": [
          "courseCode",
          "courseName",
          "lecturerID"
        ],
        "type": "object",
        "properties": {
          "courseName": {
            "type": "string",
            "nullable": true
          },
          "courseCode": {
            "type": "string",
            "nullable": true
          },
          "lecturerID": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "Enrollment": {
        "type": "object",
        "properties": {
          "studentId": {
            "type": "string",
            "format": "uuid"
          },
          "classId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      }
    }
  }
}